<?xml version="1.0" encoding="utf-8"?>

<resources>
    <color name="text_light">#ffbbbbbb</color>

    <!-- 0x7f == 2/255 which is what Google recommends for transparency -->
    <color name="transparent_black">#7f000000</color>
    <color name="transparent_flickr_pink">#7fff0084</color>

    <color name="flickr_pink">#ffff0084</color>
    <color name="flickr_blue">#ff0063dc</color>

    <color name="ics_background_start">#ff020202</color>
    <color name="ics_background_end">#ff272D33</color>

    <color name="abs__holo_blue_light">#ff33b5e5</color>

    <drawable name="ab_bg_black">#aa000000</drawable>
    <drawable name="flickr_pink">@color/flickr_pink</drawable>
    <drawable name="flickr_blue">@color/flickr_blue</drawable>

    <!-- https://github.com/inmite/android-styled-dialogs#how-to-style-all-dialogs -->
    <color name="dialog_message_text">#FFFFFF</color>
    <color name="dialog_title_text">@color/flickr_pink</color>
    <color name="dialog_title_separator">@color/flickr_pink</color>
    <color name="dialog_button_text">#FFFFFF</color>
    <color name="dialog_button_normal">@android:color/transparent</color>
    <color name="dialog_button_pressed">#99ff0084</color> <!-- 60 % opacity -->
    <color name="dialog_button_focused">#4Cff0084</color> <!-- 30 % opacity -->
    <color name="dialog_button_separator">#12ffffff</color> <!-- 7% opacity -->
</resources>
